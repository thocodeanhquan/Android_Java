<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="10"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_weight="3.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="end"
                android:id="@+id/textView_phepTinh"
                android:textSize="40sp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="end"
                android:id="@+id/textView_ketQua"
                android:textSize="80sp"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="6.5"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_Ac"
                android:text="AC"
                android:textSize="40sp"
                android:background="@drawable/custom_button3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <ImageButton
                android:background="@drawable/icons8_history_50"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </ImageButton>
            <Button
                android:id="@+id/btn_phanTram"
                android:text="% "
                android:textSize="40sp"
                android:background="@drawable/custom_button2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

<!--            <Button-->
<!--                android:id="@+id/btn_ngoac2"-->
<!--                android:text=")"-->
<!--                android:textSize="40sp"-->
<!--                android:background="@drawable/custom_button2"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"/>-->

            <Button
                android:id="@+id/btn_phepChia"
                android:text="รท"
                android:textSize="40sp"
                android:background="@drawable/custom_button2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="40sp"
                android:background="@drawable/custom_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_8"
                android:text="8"
                android:textSize="40sp"
                android:background="@drawable/custom_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_9"
                android:text="9"
                android:textSize="40sp"
                android:background="@drawable/custom_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_phepNhan"
                android:text="x"
                android:textSize="40sp"
                android:background="@drawable/custom_button2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="40sp"
                android:background="@drawable/custom_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_5"
                android:text="5"
                android:textSize="40sp"
                android:background="@drawable/custom_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_6"
                android:text="6"
                android:textSize="40sp"
                android:background="@drawable/custom_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_phepTru"
                android:text="-"
                android:textSize="40sp"
                android:background="@drawable/custom_button2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_1"
                android:text="1"
                android:textSize="40sp"
                android:background="@drawable/custom_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_2"
                android:text="2"
                android:textSize="40sp"
                android:background="@drawable/custom_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_3"
                android:text="3"
                android:textSize="40sp"
                android:background="@drawable/custom_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_phepCong"
                android:text="+"
                android:textSize="40sp"
                android:background="@drawable/custom_button2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_0"
                android:text="0"
                android:textSize="40sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_button" />

             <Button
                android:id="@+id/btn_dauPhay"
                android:text="."
                android:textSize="40sp"
                android:background="@drawable/custom_button4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_C"
                android:text="C"
                android:textSize="40sp"
                android:background="@drawable/custom_button3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_dauBang"
                android:text="="
                android:textSize="40sp"
                android:background="@drawable/custom_button2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>



    </LinearLayout>





</LinearLayout>